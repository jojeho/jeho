#pragma once
#include "boost/type_index.hpp"
#include <list>
namespace jeho { namespace db {

    template<typename T>
    std::string type_name()
    {
      return boost::typeindex::type_id<T>().pretty_name();
    }

    struct gt
    {};

    struct lt
    {};

    struct ge
    {};

    struct le
    {};

