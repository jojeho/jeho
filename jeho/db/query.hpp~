    struct and_
    {};

    struct or_
    {};
     

    struct sentence
    {
      std::string column;
      std::string value;
      std::string op;
    };
    

    struct query
    {
      std::string q_;
      query(std::string q):q_(q)
      {}
      
    };

    std::list<sentence> sentences(query const&q)
    {
      
    }
    
  }}
